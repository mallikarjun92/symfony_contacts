{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body_class %}bg-gradient-primary{% endblock %}

{% block body %}
    <div class="container">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                            </div>
                            <form class="user" method="post">
                                {{ form_start(form) }}
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_row(form.username, {'attr': {'class': 'form-control form-control-user'}}) }}
                                    </div>
                                    <div class="col-sm-6">
                                        {{ form_row(form.plainPassword.first, {'attr': {'class': 'form-control form-control-user'}}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    {{ form_row(form.plainPassword.second, {'attr': {'class': 'form-control form-control-user'}}) }}
                                </div>
                                <div class="form-group">
                                	<div class="custom-control custom-checkbox small">
                                        {{ form_row(form.agreeTerms) }}
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    Register Account
                                </button>
                                {{ form_end(form) }}
                            </form>
                            <hr>
                            
                            <div class="text-center">
                                <a class="small" href="{{ path('app_login') }}">Already have an account? Login!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

