{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body_class %}bg-gradient-primary{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    {% for flash_error in app.flashes('reset_password_error') %}
                                        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                                    {% endfor %}
                                    <h1 class="h4 text-gray-900 mb-2">Forgot Your Password?</h1>
                                    <p class="mb-4">
                                    	We get it, stuff happens. Just enter your email address below and we'll send you a link to reset your password!
                                    </p>
                                </div>
                                {{ form_start(requestForm, {'attr': {'class': 'user'}}) }}
                                	<div class="form-group">
                                        {{ form_widget(requestForm.email, {'attr': {'class': 'form-control form-control-user', 'placeholder': 'Enter Email Address...'}}) }}
                                    </div>
                                    <!-- <div class="text-center mb-4">
                                        <small>
                                            Enter your email address and we will send you a
                                            link to reset your password.
                                        </small>
                                    </div> -->
                            
                                    <button class="btn btn-primary btn-user btn-block">Send password reset email</button>
                                {{ form_end(requestForm) }}
                                <hr>
                                <div class="text-center">
                                	<a class="small" href="{{ path('app_register') }}">Create an Account!</a>
                                </div>
                                <div class="text-center">
                                	<a class="small" href="{{ path('app_login') }}">Already have an account? Login!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
