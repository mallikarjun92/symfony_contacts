{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body_class %}bg-gradient-primary{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-2">Reset your password</h1>
                                </div>
                                
                                    {{ form_start(resetForm, {'attr': {'class': 'user'}}) }}
                                    	<div class="form-group">
                                            {{ form_row(resetForm.plainPassword.first, {'attr': {'class': 'form-control form-control-user'}}) }}
                                        </div>
                                        <div class="form-group">
                                            {{ form_row(resetForm.plainPassword.second, {'attr': {'class': 'form-control form-control-user'}}) }}
                                        </div>
                                        <button class="btn btn-primary btn-user btn-block">Reset password</button>
                                    {{ form_end(resetForm) }}
{% endblock %}
